{{!< default}}

{{> header}}

<main>
  {{#foreach posts}}
  <article class="{{post_class}}">

    <header>
      <h2><a href="{{url}}">{{title}}</a></h2>
    </header>

    <section>
      <p>{{excerpt words="26"}} <a href="{{url}}">&raquo;</a></p>
    </section>

    <footer>
      {{#author}}
      <a href="{{url}}">
        <img src="{{image}}" alt="{{name}}">
        <h5>{{name}}</h5>
      </a>
      {{/author}}
    </footer>

  </article>
  {{/foreach}}

  {{pagination}}
</main>
